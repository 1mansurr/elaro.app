# ELARO Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED - App will not work without these
# ============================================================================

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ============================================================================
# RECOMMENDED - App works but with limited functionality
# ============================================================================

# RevenueCat Configuration (for subscriptions)
EXPO_PUBLIC_REVENUECAT_APPLE_KEY=your_revenuecat_apple_key

# Sentry Error Tracking
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Mixpanel Analytics (currently parked/mock implementation)
# EXPO_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# ============================================================================
# OPTIONAL - iOS/Android Build Configuration
# ============================================================================

# iOS
APPLE_TEAM_ID=your_apple_team_id
EXPO_PUBLIC_IOS_BUILD_NUMBER=1

# Android
EXPO_PUBLIC_ANDROID_VERSION_CODE=1

# ============================================================================
# OPTIONAL - App Configuration
# ============================================================================

EXPO_PUBLIC_APP_NAME=Elaro
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_UPDATE_CHANNEL=production

# ============================================================================
# DO NOT COMMIT .env FILE
# Add .env to .gitignore
# ============================================================================
